@code {

    private int totalPlayers = 0;
    private int remainingPlayers = 0;
    private int selectedBlindTimerInSeconds = 0;

    private int TimerExpirationCount = 0;

    private void HandleTimerHitZero()
    {
        TimerExpirationCount++;
    }
}